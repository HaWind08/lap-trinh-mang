#include<iostream>
using namespace std;

void sapxepmang(float a[], int n)
{
	int maxIndex = 0;
	for (int i = 1; i < n; i++)
	{
		if (a[i] > a[maxIndex]) maxIndex = i;
	}
	swap(a[0], a[maxIndex]);

	int minIndex = 0;
	for (int i = 1; i < n; i++)
	{
		if (a[i] < a[minIndex]) minIndex = i;
	}
	swap(a[n - 1], a[minIndex]);

	for (int i = 1; i < n - 1; i++)
	{
		for (int j = i + 1; j < n - 1; j++)
		{
			if (a[i] > a[j])
			{
				swap(a[i], a[j]);
			}
		}
	}
}

int main()
{
	int n;
	cout << "Nhap so phan tu cua mang: ";
	cin >> n;

	float a[1001];
	cout << "Nhap cac phan tu cua mang: " << endl;
	for (int i = 0; i < n; i++)
	{
		cout << "a[" << i << "]=";
		cin >> a[i];
	}

	sapxepmang(a, n);

	cout << "Mang sau khi sap xep: ";
	for (int i = 0; i < n; i++)
	{
		cout << a[i] << " ";
	}

	return 0;
}
