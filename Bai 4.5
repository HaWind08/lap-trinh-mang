#include<iostream>
using namespace std;

void sapxepmang(float a[], int n)
{
	bool tang, tang_ngat, giam, giam_ngat;
	tang = tang_ngat = giam = giam_ngat = true;
	for (int i = 0; i < n - 1; i++)
	{
		if (a[i] > a[i + 1])
		{
			tang = false;
			tang_ngat = false;
		}
		if (a[i] >= a[i + 1])
		{
			tang_ngat = false;
		}
		if (a[i] < a[i + 1])
		{
			giam = false;
			giam_ngat = false;
		}
		if (a[i] <= a[i + 1])
		{
			giam_ngat = false;
		}
	}

	if (tang_ngat)
	{
		cout << "Day duoc sap xep tang ngat" << endl;
	}
	else if (tang)
	{
		cout << "Day duoc sap xep tang" << endl;
	}
	else if (giam_ngat)
	{
		cout << "Day duoc sap xep giam ngat" << endl;
	}
	else if (giam)
	{
		cout << "Day duoc sap xep giam" << endl;
	}
	else
	{
		cout << "Day chua duoc sap xep";
	}
}

int main()
{
	int n;
	do
	{
		cout << "So phan tu cua day: ";
		cin >> n;
	} while (n < 2);

	float a[1001];
	cout << "Nhap cac phan tu cua day: " << " " << endl;;
	for (int i = 0; i < n; i++)
	{
		cin >> a[i];
	}

	sapxepmang(a, n);

	return 0;
}
