#include<iostream>
using namespace std;

int main()
{
	int a1[100][100],a2[100][100],m,n;
	cout << "Nhap n: "; cin >> n;
	cout << "Nhap m: "; cin >> m;
		
	cout << "Nhap ma tran 1: " << endl;
	for(int i = 0; i < n;i++)
	{
		for(int j = 0; j < m;j++)
		{
			cin >> a1[i][j];
		}
	}
	
	cout << "Nhap ma tran 2: " << endl;
	for(int i = 0; i < n;i++)
	{
		for(int j = 0; j < m;j++)
		{
			cin >> a2[i][j];
		}
	}
	
	cout << "Tong 2 ma tran: " << endl;
	for(int i = 0; i < n;i++)
	{
		for(int j = 0; j < m;j++)
		{
			cout << a1[i][j] + a2[i][j] << " ";
		}
		cout << endl;
	}
}

